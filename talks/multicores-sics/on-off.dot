digraph door_states {
  graph [ dpi = 300 ];
  splines=true;
  nodesep=2;
  ranksep="0.9";
  bgcolor="transparent";

  edge [ fontname = "Ubuntu" ];
  node [ fontname = "Ubuntu Bold" ];

  node [shape = circle];
  ON;
  OFF;
  BROKEN;

  ON -> BROKEN;
  OFF -> BROKEN;
  {rank=same; ON -> OFF [label="switch OFF"];}
  {rank=same; OFF -> ON [label="switch ON"];}
}
